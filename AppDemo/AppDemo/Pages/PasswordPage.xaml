<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             BackgroundColor="{StaticResource MainColor}"
             x:Class="AppDemo.Pages.PasswordPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" BindingContext="{Binding NewPasword}">

            <Label Text="Usuario"/>
            <Entry Text="{Binding Agente}"  IsEnabled="False"></Entry>
            <Label Text="Contraseña Actual" />
            <Entry Text="{Binding ContrasenaActual,Mode=TwoWay}" IsPassword="True"></Entry>
            <Label Text="Nueva contraseña"/>
            <Entry Text="{Binding ContrasenaNueva,Mode=TwoWay}" IsPassword="True"></Entry>
            <Label Text="Confirmar Contraseña"/>
            <Entry Text="{Binding ContrasenaNueva2,Mode=TwoWay}" IsPassword="True"></Entry>

            <Button 
                Text="Guardar cambios"
                Command="{Binding updateCommand}"
                BackgroundColor="{StaticResource AccentColor2}"
                TextColor="{StaticResource MainColor}">
            </Button>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>