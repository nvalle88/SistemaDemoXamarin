<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TK.CustomMap.Sample.SamplePage"
             Title="TKCustomMap">

    <!--<RelativeLayout x:Name="_baseLayout" VerticalOptions="FillAndExpand" />-->

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Route" Command="{Binding AddRouteCommand}">
            <ToolbarItem.Icon>
                <OnPlatform
          x:TypeArguments="FileImageSource"
          Android="ic_directions_white_24dp.png"
          iOS="ic_directions.png" />
            </ToolbarItem.Icon>
        </ToolbarItem>
        <ToolbarItem Text="Clear" Command="{Binding ClearMapCommand}" />
        <ToolbarItem Text="List" Command="{Binding ShowListCommand}" />
        <ToolbarItem Text="Start Test" Command="{Binding RunSimulationCommand}" />
    </ContentPage.ToolbarItems>
</ContentPage>