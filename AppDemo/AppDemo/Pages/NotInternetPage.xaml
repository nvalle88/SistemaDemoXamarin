<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppDemo.Pages.NotInternetPage">
    <ContentPage.Content>
        <StackLayout>
            <Image
                Source="ds.png"
                WidthRequest="200"
                HeightRequest="150"
                HorizontalOptions="Center"
                VerticalOptions="Center">
            </Image>
            <Label Text="Active su internet!"
                VerticalOptions="Center" 
                HorizontalOptions="CenterAndExpand" />
            <Label Text="La aplicación requiere de una conexión a internet ya sea por datos o por WiFi para funcionar"
                VerticalOptions="Center" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>