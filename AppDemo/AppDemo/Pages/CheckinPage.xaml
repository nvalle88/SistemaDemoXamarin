<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
             xmlns:controls="clr-namespace:AppDemo.Controls"
             x:Class="AppDemo.Pages.CheckinPage">
    <StackLayout VerticalOptions="Center" HorizontalOptions="FillAndExpand" Padding="20, 20, 20, 20">

        <StackLayout BackgroundColor="White">
            <Label Text="Chekin"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="StartAndExpand"
                   />

            <controls:BindablePicker Title="Elija el cliente de la visita"></controls:BindablePicker>
            <Label Text="Observación"></Label>
            <Editor HeightRequest="50"></Editor>
            <Button Text="CheckIn" TextColor="{StaticResource AccentColor2}"></Button>

        </StackLayout>

        <Button Text="Cerrar" TextColor="WhiteSmoke" BackgroundColor="{StaticResource AccentColor2}" ></Button>

    </StackLayout>
</pages:PopupPage>